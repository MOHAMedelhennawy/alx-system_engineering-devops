#!/usr/bin/env bash
# Write a Bash script that transfers a file from our client to a server
if [ $# -lt 3 ]; then
	echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
else
	path_to_file=$1
	id_add=$2
	username=$3
	path_to_ssh_key=$4
	
	scp -o StrictHostKeyChecking=no $path_to_file $username@$id_add:	
fi
